<aura:component implements="flexipage:availableForAllPageTypes" access="global" >
	<aura:attribute name="isOpen" type="boolean" default="false"/>
    <aura:attribute name="tips" type="String" default=" "/>{!v.tips}
  <div class="slds-m-around--xx-large">
      <h5 id="tips" class="slds-text-heading--medium slds-p-around--medium"> </h5>
    <button class="button" onclick="{!c.openModel}">Click me to know what I am thinking</button>  
    
  <!--Use aura:if tag to display Model Box, on the bese of conditions. [isOpen boolean attribute] -->   
    <aura:if isTrue="{!v.isOpen}">
      
      <div role="dialog" tabindex="-1" aria-labelledby="header99" class="slds-modal slds-fade-in-open ">
        <div class="slds-modal__container">
          <div class="slds-modal__header">
            <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeModel}">
            X
            <span class="slds-assistive-text">Close</span>
            </button>
            <h2 id="header99" class="slds-text-heading--medium">My current Mindset</h2>
              <br></br>
            <h3 id="header99" class="slds-text-heading--small">This is my cool assignment</h3>
          </div>
          <div class="slds-modal__content slds-p-around--medium">
            <p><b>I am so excited to learn Lightning
              </b>
            </p>
          </div>
          <div class="slds-modal__footer">
            <button class="slds-button slds-button--neutral" onclick="{!c.cancelModel}" >Cancel</button>
            <button class="slds-button slds-button--neutral" onclick="{!c.confirmModel}">Confirm</button>
          </div>
        </div>
      </div>
      <div class="slds-backdrop slds-backdrop--open"></div>
    
 </aura:if>
  </div>

</aura:component>